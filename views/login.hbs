<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <!-- m-auto 左右致中-->
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
  
      <form action="/users/login" method="POST">
        <div class="form-group mt-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group mt-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block form-control my-3">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block form-control">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register" class="mx-1">Register</a>
      </p>
    </div>
  </div>
</div>